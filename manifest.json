{
  "manifest_version": 3,
  "name": "Netflix Time Tracker Extension",
  "version": "1.2",
  "description": "Netflixの再生時間を画面上に表示する拡張機能",
  "env": "release",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/watch/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/watch/*"],
      "js": ["content.js"]
    }
  ]
}